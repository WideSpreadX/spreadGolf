<style>
    .user-course-selection {
        text-align: center;
        color: #fff;
        font-size: 2rem;
    }
    .all-courses {
        margin-top: 20px;
    }
    .all-courses a {
        text-decoration: none;
        color: #000;
    }
    .course {
        width: 90%;
        margin-left: 5%;
        margin-bottom: 20px;
        border-radius: 8px;
        background: rgba(255, 255, 255, 0.3);
        backdrop-filter: blur(2px);
        text-align: center;
        font-size: 1rem;
        box-shadow: 0 2px 2px  rgba(0, 0, 0, 0.6);     
        padding-bottom: 10px;   
    }
    .course-name {
        color: #fff;
        background: rgba(0, 128, 0, 0.3);
        border-bottom: groove 2px green;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
        margin-bottom: 10px;
        padding: 10px;
    }
    .data-text a {
        color: #fff;
        text-shadow: 0 0 2px green;
    }
</style>

<div class="page-title">
    <h1>Courses Home</h1>
</div>

<div class="user-course-selection">
    <h5>Your Courses</h5>
</div>

<div class="all-courses">
    <% allCourses.forEach(function(course) { %>
        <div class="course">
            <a href="/courses/course/<%= course.id %>">
                <div class="course-name">
                    <h3><%= course.name %></h3>
                </div>
            </a>
            <div class="course-data">
                <div class="data-text">
                    <p><a href="<%= course.url %>" target="_blank"><%= course.url %></a></p>
                    <p><small><%= course.address.street_1 %></small></p>
                    <p><small><%= course.address.city %>, <%= course.address.state %> <%= course.address.zip %></small></p>
                </div>
            </div>
        </div>
    <% }) %>
</div>

