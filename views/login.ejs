<style>
    .login-form {
        width: 100%;
        background: rgba(255, 255, 255, 0.3);
        backdrop-filter: blur(4px);
        margin-top: 100px;
        text-align: center;
    }
    .login-form h5 {
        text-align: center;
        color: green;
        padding: 10px;
    }
    .input-group {
        padding: 10px;
        margin-bottom: 5px;
        width: 90%;
        position: relative;
    }
    .input-group label {
        display: block;
        width: 100%;
        text-align: left;
        padding-left: 10px;
        text-shadow: 0 0 2px rgba(0, 0, 0, 0.5);
        font-size: 1.5rem;
    }
    .input-group input {
        width: 100%;
        border-radius: 5px;
        padding: 5px;
        background: rgba(0, 128, 0, 0.3);
        color: #fff;
        outline: none;
        border: none;
        font-size: 1.5rem;
    }

    .input-group input::placeholder {
        color: #fff;
    }
    .login-form button {
        border: none;
        outline: none;
        border-radius: 8px;
        background: green;
        color: #fff;
        padding: 10px;
        width: 90%;
        margin-bottom: 20px;
    }
    .create-account {
        width: 100%;
        background: rgba(255, 255, 255, 0.3);
        backdrop-filter: blur(4px);
        margin-top: 30px;
        padding: 10px;
        padding-left: 0;
        text-align: center;
    }
</style>
  <!-- Login Form -->

  <div class="login-form">   
    <%- include('./partials/messages') %>
    <form action="/users/login" method="POST">
        <h5 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Login</h5>
        <div class="input-group">
          <label for="email" style="color: #fff">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="input-control login-input"
            placeholder="Enter your email"
            />
        </div>
        <div class="input-group">
          <label style="color: #fff" for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            placeholder="Enter your password"
            />
        </div>
      <button type="submit">Login</button>
    </form>
  </div>

<div class="create-account">
    <p>No account? <a href="/users/register">Regster</a></p>
</div>